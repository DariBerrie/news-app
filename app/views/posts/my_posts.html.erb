<%= link_to posts_path, class: "text-decoration-none" do %>
  <p class="text-muted ms-3 mt-3"><i class="fa-solid fa-backward"></i> Back to articles</p>
<% end %>
<div class="container">
  <h3 class="text-center mt-4 pt-4">Your Articles</h3>
  <div class="d-flex flex-row justify-content-center">
    <div class="post-list d-flex flex-wrap justify-content-center">
      <% @user_posts.each do |post| %>
        <%= render 'shared/post-card', post: post %>
      <% end %>
    </div>
  </div>
</div>
